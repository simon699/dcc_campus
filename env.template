# DCC数字员工系统 - 环境变量配置模板
# 复制此文件为 .env 并填入实际配置

# 数据库配置 (阿里云RDS)
DB_HOST=your-rds-host.mysql.rds.aliyuncs.com
DB_PORT=3306
DB_USER=your_username
DB_PASSWORD=your_password
DB_NAME=dcc_employee_db

# Redis 配置（Celery 任务队列）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT配置
JWT_SECRET_KEY=your-jwt-secret-key-2024
JWT_EXPIRE_HOURS=24

# 阿里云配置
ALIBABA_CLOUD_ACCESS_KEY_ID=your_access_key_id
ALIBABA_CLOUD_ACCESS_KEY_SECRET=your_access_key_secret
INSTANCE_ID=your_instance_id
DASHSCOPE_API_KEY=your_dashscope_api_key
ALIBAILIAN_APP_ID=your_bailian_app_id

# 前端配置
NEXT_PUBLIC_API_BASE_URL=http://campus.kongbaijiyi.com/api

# 环境设置
ENVIRONMENT=production
DEBUG=False